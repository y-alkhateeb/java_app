<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ui.student.StudentDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/section_name" />

            <TextView
                android:id="@+id/details_section_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text"
                android:layout_weight="0.7"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/prompt_section_room" />

            <TextView
                android:id="@+id/details_section_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text"
                android:layout_weight="0.7"
                android:gravity="start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/prompt_time" />

            <TextView
                android:id="@+id/details_section_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text"
                android:layout_weight="0.7"
                android:gravity="start" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="14dp">

            <Button
                android:id="@+id/details_section_delete"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="14dp"
                android:layout_weight="0.3"
                android:background="?attr/ColorRed"
                android:text="@string/prompt_delete"
                android:textColor="?attr/colorWhite" />

            <Button
                android:id="@+id/details_section_edit"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginHorizontal="14dp"
                android:layout_weight="0.3"
                android:text="@string/prompt_edit" />

            <Button
                android:id="@+id/details_section_add"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginHorizontal="14dp"
                android:layout_weight="0.3"
                android:backgroundTint="@color/teal_200"
                android:text="@string/prompt_add_co_in"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/course_and_instructor_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>